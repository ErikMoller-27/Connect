<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.maincontroller"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Navigation buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Go to Profile" onAction="#goToProfile"/>
        <Button text="Go to Jobs" onAction="#goToJobs"/>
    </HBox>

    <!-- Main tabs -->
    <TabPane fx:id="maintabs" prefHeight="400" prefWidth="600">
        <Tab text="Profile" fx:id="profileTab">
            <fx:include source="profile.fxml"/>
        </Tab>
        <Tab text="Jobs" fx:id="jobsTab">
            <fx:include source="jobs.fxml"/>
        </Tab>
    </TabPane>
</VBox>
