<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import utils.RadarView?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.profilecontroller"
      spacing="10">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="User Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Name:" style="-fx-font-weight: bold;"/>
        <Label fx:id="nameLabel" text="Loading..."/>
    </HBox>

    <Label text="Skills:" style="-fx-font-weight: bold;"/>
    <ListView fx:id="skillsList" prefHeight="200"/>

    <RadarView fx:id="radarView" prefWidth="720" prefHeight="560"/>

    <Button fx:id="uploadResumeButton" text="Upload Resume" onAction="#handleUploadResume"/>
</VBox>
